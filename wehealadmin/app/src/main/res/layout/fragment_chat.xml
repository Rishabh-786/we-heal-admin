<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ContentFragment">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:text="Chat_Statistics" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv1"
                    android:layout_marginTop="20dp"
                    android:text="Select the date for which you need to see the data" />

                <DatePicker
                    android:id="@+id/cd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/textView3"
                    android:layout_marginTop="30dp" />
                <TextView
                    android:id="@+id/awt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Average WaitingTime = "
                    android:layout_below="@id/cd"
                    android:layout_marginTop="20dp" />
                <TextView
                    android:id="@+id/awt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_below="@id/cd"
                    android:layout_toEndOf="@id/awt1"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"/>
            </RelativeLayout>
       </ScrollView>

</FrameLayout>